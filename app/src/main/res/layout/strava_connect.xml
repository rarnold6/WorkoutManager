<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="24dp"
    android:paddingTop="12dp"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:orientation="vertical"
    android:id="@+id/strava_connect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/btnBackStrava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"/>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="STRAVA"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="60dp">

        <TextView
            android:id="@+id/tvStravaConnected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your are not connected to Strava yet!"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:paddingBottom="20dp"
            />

        <TextView
            android:id="@+id/tvStravaConnectedDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you are connected to Strava you can automatically upload your HIIT."
            android:textColor="@color/white"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="80dp"
            >

            <ImageView
                android:id="@+id/ivConnectWithStrava"
                android:layout_width="193dp"
                android:layout_height="48dp"
                android:src="@drawable/btn_strava_connectwith_orange"
                />
        </LinearLayout>
    </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/api_logo_compatible_strava"/>



</LinearLayout>